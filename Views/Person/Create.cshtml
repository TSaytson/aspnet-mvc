@model introduction.Models.PersonModel
@{
  ViewData["Title"] = "Person Register";
}

<!DOCTYPE html>
<html>

<head>
  <meta name="viewport" content="width=device-width" />
  <title>@ViewData["Title"]</title>
</head>

<body>
  <h2>@ViewData["Title"]</h2>
  <div class="container">
    @using (Html.BeginForm())
    {
      @Html.HiddenFor(m => Model.Id)
      ;

      <div class="form-group">
        @Html.LabelFor(m => Model.Cpf)
        @Html.TextBoxFor(m => Model.Cpf, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => Model.Cpf)
      </div>
      <div class="form-group">
        @Html.LabelFor(m => Model.Name)
        @Html.TextBoxFor(m => Model.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => Model.Name)
      </div>
      <div class="form-group">
        @Html.LabelFor(m => Model.SurName)
        @Html.TextBoxFor(m => Model.SurName, new {@class = "form-control"})
      </div>
      <div class="form-group">
        @Html.LabelFor(m => Model.BirthDate)
        @Html.TextBoxFor(m => Model.BirthDate, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => Model.BirthDate)
      </div>
      <div class="form-group">
        @Html.LabelFor(m => Model.Email)
        @Html.TextBoxFor(m => Model.Email, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => Model.Email)
      </div>
      <div class="form-group">
        @Html.LabelFor(m => Model.Phone)
        @Html.TextBoxFor(m => Model.Phone, new {@class = "form-control"})
      </div>

      <input type="submit" name="Send" class="btn btn-dark">
    }
  </div>
</body>

</html>